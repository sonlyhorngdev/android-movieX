<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/space_16"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/ll_location"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="50dp"
                android:layout_weight="2"
                android:background="@drawable/item_stoke_16"
                android:backgroundTint="@color/bg_primary_light"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/space_8">

                <ImageView
                    android:id="@+id/iv_location_icon"
                    android:layout_width="@dimen/space_16"
                    android:layout_height="@dimen/space_16"
                    android:layout_marginEnd="@dimen/space_8"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="11204-5761 Phnom Penh"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/space_8">

                    <!-- Bell Icon -->
                    <ImageView
                        android:id="@+id/iv_bell"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:padding="4dp"
                        android:src="@drawable/ic_bell" />

                    <!-- Notification Badge -->
                    <TextView
                        android:id="@+id/tv_notification_badge"
                        android:layout_width="@dimen/space_16"
                        android:layout_height="@dimen/space_16"
                        android:layout_alignTop="@id/iv_bell"
                        android:layout_alignEnd="@id/iv_bell"
                        android:layout_marginStart="-5dp"
                        android:layout_marginTop="-0dp"
                        android:background="@drawable/item_circle_with_solid"
                        android:backgroundTint="#FF0000"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_8"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <!-- Bell Icon -->
                    <ImageView
                        android:id="@+id/iv_card"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:padding="4dp"
                        android:src="@drawable/ic_cart" />

                    <!-- Notification Badge -->
                    <TextView
                        android:id="@+id/tv_cart_badge"
                        android:layout_width="@dimen/space_16"
                        android:layout_height="@dimen/space_16"
                        android:layout_alignTop="@id/iv_card"
                        android:layout_alignEnd="@id/iv_card"
                        android:layout_marginStart="-4dp"
                        android:layout_marginTop="-0dp"
                        android:background="@drawable/item_circle_with_solid"
                        android:backgroundTint="#FF0000"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="12"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_8" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- Search Section -->
        <LinearLayout
            android:id="@+id/ll_search_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space_16"
            android:layout_marginStart="@dimen/space_16"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/ll_top_bar">

            <include
                android:id="@+id/ll_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/space_16"
                layout="@layout/item_search_component"/>
            <ImageView
                android:id="@+id/iv_qr"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_qr"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_16"
            android:background="@drawable/item_stoke_16"
            android:backgroundTint="@color/bg_primary_light"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/ll_search_section">
            <LinearLayout
                android:id="@+id/ll_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:padding="@dimen/font_size_16"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/banner_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16"/>
                <TextView
                    android:id="@+id/tv_title_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/banner_title_sub"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/font_size_12"/>

                <TextView
                    android:id="@+id/tv_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Save Up to 60% off"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_size_14"/>
                <TextView
                    android:id="@+id/tv_sign_in"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_8"
                    android:background="@drawable/item_stoke_16"
                    android:backgroundTint="@color/colorPrimary"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:padding="@dimen/space_10"
                    android:text="Order Now"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:layout_marginEnd="@dimen/space_10"
                android:orientation="vertical"
                android:background="@color/bg_primary_light">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="210dp"
                    android:layout_marginEnd="@dimen/space_10"
                    android:src="@drawable/banner_image"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Category -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_16"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/ll_banner">

            <include
                android:id="@+id/ll_category_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_general_bar"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/space_8"
                        layout="@layout/item_home_category"/>

                    <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/space_8"
                        layout="@layout/item_home_category"/>

                    <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/space_8"
                        layout="@layout/item_home_category"/>

                    <include
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        layout="@layout/item_home_category"/>

                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>