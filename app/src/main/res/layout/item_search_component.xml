<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Custom Search Bar -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:background="@drawable/item_stoke_16"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintBaseline_toTopOf="parent">

        <!-- Left Icon (Search Icon) -->
        <ImageView
            android:id="@+id/leftIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search" />

        <!-- EditText (Search Input) -->
        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/leftIcon"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:hint="Search"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:drawableLeft="@drawable/ic_microphone"
            android:drawablePadding="8dp"
            android:background="@drawable/item_circle_with_stroke" /> <!-- Custom Background -->

        <!-- Right Icon (Clear icon or any other action) -->
        <ImageView
            android:id="@+id/rightIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_microphone" /> <!-- Visible when there's text in the search field -->

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
